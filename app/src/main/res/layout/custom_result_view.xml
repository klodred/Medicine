<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/tvTitle"
			style="@style/S21BoldBlack"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="@string/common_time" />

		<TextView
			android:id="@+id/tvMinuteValue"
			style="@style/S21BoldBlack"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="16dp"
			android:maxLines="2"
			tools:text="13.6"
			app:layout_constraintLeft_toRightOf="@id/tvTitle"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<TextView
			android:id="@+id/tvSecondValue"
			style="@style/S21BoldBlack"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			tools:text="13.6"
			app:layout_constraintLeft_toLeftOf="@id/tvMinuteValue"
			app:layout_constraintRight_toRightOf="@id/tvMinuteValue"
			app:layout_constraintTop_toBottomOf="@id/tvMinuteValue" />

	</androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

