<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/tvTitle"
			style="@style/S21BoldBlack"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="@string/common_time" />

		<LinearLayout
			android:id="@+id/llMinuteContainer"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="16dp"
			android:orientation="horizontal"
			app:layout_constraintLeft_toRightOf="@id/tvTitle"
			app:layout_constraintTop_toTopOf="parent">

			<TextView
				android:id="@+id/tvMinuteValue"
				style="@style/S21BoldBlack"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="13.6" />

			<TextView
				android:id="@+id/tvMinuteUnit"
				style="@style/S21BoldBlack"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="6dp"
				android:text="@string/units_minute" />

		</LinearLayout>

		<LinearLayout
			android:id="@+id/llSecondContainer"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_weight="1"
			android:orientation="horizontal"
			app:layout_constraintLeft_toLeftOf="@id/llMinuteContainer"
			app:layout_constraintTop_toBottomOf="@id/llMinuteContainer">

			<TextView
				android:id="@+id/tvSecondValue"
				style="@style/S21BoldBlack"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="13.6" />

			<TextView
				android:id="@+id/tvSecondUnit"
				style="@style/S21BoldBlack"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="6dp"
				android:text="@string/units_second" />

		</LinearLayout>
	</androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>